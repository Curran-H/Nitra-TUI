/* Base styles for Nitra-TUI panels */

Screen {
    layout: grid;
    grid-size: 2 2;
    grid-gutter: 1;
}

.panel {
    border: tall $primary;
    padding: 1 2;
}

.deployments {
    background: $surface-darkest;
}

.logs {
    background: $surface;
}

.portfolio {
    background: $boost;
}

.intel {
    background: $success-darken-1;
}
